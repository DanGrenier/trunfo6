<% if the_object.errors.any? %>
  <div id="error_explanation"
    class = "card border-danger mb-3">
    <div class = "card-header text-danger">
      <%= I18n.t("error_handling.messages.not_saved",
      count: the_object.errors.count, resource: objectname)%>
      <div class = "card-body text-danger">
        <ul>
          <% the_object.errors.messages.values.each do |message| %>
            <%message.each do |m|%>
            <li> 
              <%= m%>
            </li>
            <%end%>
          <%end%>
        </ul>
      </div>
    </div>
  </div>
<% end %>