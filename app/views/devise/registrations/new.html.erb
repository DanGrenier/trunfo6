<div class = "row">
  <div class = "col-12 col-md-6 col-lg-6 offset-md-3 offset-lg-3">
    <div class = "card ">
      <div class = "card-header login_header">
        <h2><%= t :sign_up_title%></h2>
      </div>
      <div class = "card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :email, (t :sign_up_email)%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, (t :sign_up_password) %>
        <% if @minimum_password_length %>
          <em>
            (<%= t('min_chars', chars: @minimum_password_length) %>)
          </em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= f.label :password_confirmation, (t :sign_up_confirm) %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
      <div class = "col-6 col-md-4 col-lg-4
      " style = "padding-left: 0px">
        <%= f.submit (t :sign_up_title), class: 'btn btn-trunfo btn-block' %>
      </div>
      
      <% end %>
      <br>

      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>    
