<div id="properties">
   <!-- Render the property list or message -->
  <%if @properties.size > 0 %>
    <%=render partial: 'property_list'%>
  <%else%>
    <%=render partial: 'no_properties'%>
  <%end%>
</div>
<br>
<!-- Button to Add Property -->
<div class = "row">
  <div class = "col-6 col-md-3 col-lg-2 col-xl-2">
    <%= link_to (I18n.t :add_property_button), new_property_path,
    data: {turbolinks: false}, class: "btn btn-block btn-trunfo"%>
  </div>
</div>
